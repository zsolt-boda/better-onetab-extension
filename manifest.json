{
  "manifest_version": 3,
  "author": "Zsolt Boda",
  "homepage_url": "https://zsoltboda.com",
  "name": "Better OneTab",
  "description": "This is OneTab but with better UI",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "48": "public/icon48.png",
    "72": "public/icon72.png",
    "144": "public/icon144.png",
    "512": "public/icon512.png"
  },
  "permissions": ["activeTab", "tabs", "storage", "unlimitedStorage", "contextMenus"]
}
